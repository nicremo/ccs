{
  "name": "@nicremo/coding-helper",
  "version": "1.0.0",
  "description": "Multi-provider coding helper for Claude Code - configure Z.AI/GLM, MiniMax, and Kimi models",
  "main": "dist/cli.js",
  "bin": {
    "coding-helper": "dist/cli.js",
    "cchelper": "dist/cli.js"
  },
  "type": "module",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsc && cp -r src/locales dist/",
    "dev": "tsx watch src/cli.ts",
    "start": "node dist/cli.js",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run clean && npm run build"
  },
  "keywords": [
    "cli",
    "claude-code",
    "coding-helper",
    "ai",
    "minimax",
    "kimi",
    "zhipu",
    "glm"
  ],
  "author": "Nicremo",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Nicremo/coding-helper.git"
  },
  "homepage": "https://github.com/Nicremo/coding-helper",
  "dependencies": {
    "chalk": "^5.3.0",
    "commander": "^12.1.0",
    "inquirer": "^9.2.12",
    "js-yaml": "^4.1.0",
    "ora": "^8.0.1",
    "terminal-link": "^5.0.0"
  },
  "devDependencies": {
    "@types/inquirer": "^9.0.7",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^22.0.0",
    "tsx": "^4.20.6",
    "typescript": "^5.7.0"
  }
}
